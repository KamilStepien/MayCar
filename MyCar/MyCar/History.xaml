<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCar.History">
    <ContentPage.Content>
        <StackLayout>


            <ScrollView>
                <StackLayout x:Name="lvPetrol" >
                
            </StackLayout>
                </ScrollView>
            
            <Button IsVisible="{Binding DisplayMenu}" VerticalOptions="End"   HorizontalOptions="End" BackgroundColor= "#3f51b5"   TextColor="White"  Margin="5,0,5,0" Text = "Drive" />
            <Button IsVisible="{Binding DisplayMenu}" VerticalOptions="End"  Clicked="EnterCreateTrip" HorizontalOptions="End" BackgroundColor= "#3f51b5"   TextColor="White"  Margin="5,0,5,0" Text = "Trip" />
            <Button IsVisible="{Binding DisplayMenu}" VerticalOptions="End" Clicked="EnterFillUp" HorizontalOptions="End" BackgroundColor= "#3f51b5"   TextColor="White"  Margin="5,0,5,0" Text = "Fill up" />
            <Button Margin="10,10,10,10"  VerticalOptions="End" HorizontalOptions="End"  BorderRadius="50"  Clicked="Add"   BackgroundColor= "#3f51b5"   TextColor="White"   Text = "+" />
        </StackLayout>
     
    </ContentPage.Content>
</ContentPage>