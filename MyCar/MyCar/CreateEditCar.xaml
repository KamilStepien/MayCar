<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCar.CreateEditCar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Dodaj swój pojaz do aplikacji" />
            <Entry x:Name="Name" Placeholder="Name" />
            <Entry x:Name="Model" Placeholder="Model"  />
            <Label x:Name="lblValidation" Text="Błedne dane" FontSize="Micro" TextColor="Red" IsVisible="False" />
            <Button x:Name="AddVehicle" Text="Dodaj"  Clicked="AddVehicle_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>