<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCar.CreateEditCar">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
            
            <Label Text="Dodaj swój pojaz do aplikacji" />
            <Image x:Name="image" Source="{Binding ImageSource}"/>
            <Button x:Name="pickPhoto" Text="Pick Photo"/>
            <Entry  Placeholder="Name"   Text="{Binding CarName}"/>
            <Entry  Placeholder="Model"   Text="{Binding CarModel}"/>
            <Label x:Name="lblValidation" Text="Błedne dane" FontSize="Micro" TextColor="Red" IsVisible="False" />
            <Button  Text="Dodaj"  Clicked="AddVehicle_Clicked" />
            <Button Text="Pomin"  Clicked="Next_Clicked" />
        </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>